---
import Btn from "./Btn.astro";
import BtnCard from "./BtnCard.astro";

interface Props {
  image: string;
  title: string;
  subtitle: string;
  description: string;
  actionTitle: string;
  includes: string[];
  action: string;
  showPopularButton?: boolean; // Nueva propiedad para mostrar el botón
  className?: string; // Añadido para clases adicionales
  id?: string; // Añadido para ID
  width?: string; // Añadido para ancho
}

const {
  image,
  title,
  subtitle,
  description,
  actionTitle,
  includes,
  action,
  showPopularButton = false, // Valor por defecto es false
  className = "",
  id,
  width = "w-70",
} = Astro.props;
---

<section id={id} class={`p-4 pt-8 ${width} bg-white hover:bg-yellow-500 rounded-lg shadow-md transition duration-500 ease-in-out scale-100 hover:scale-110 ${className}`}>
  <div class="flex flex-row p-2 transition duration-500 ease-in-out items-center justify-evenly">
    <img src={Astro.props.image} alt="Imagen" class="w-10 h-10 object-cover rounded" />
    <div class="ml-2">
      <h3 class="text-lg font-bold text-black">{title}</h3>
      <h4 class="text-sm text-black">{subtitle}</h4>
    </div>
    {showPopularButton && ( // Condicional para mostrar el botón
      <a
        href="#"
        class="bg-[#131614] rounded-md py-1 px-2 text-white hover:bg-white hover:text-yellow-500 transition duration-300 ease-in-out ml-2"
      >
        Popular
      </a>
    )}
  </div>
  <p class="text-gray-500 p-2 py-4 transition duration-500 ease-in-out text-xs">
    {description}
  </p>
  <h3 class="text-4xl font-bold p-2 py-4 text-black transition duration-500 ease-in-out">
    {actionTitle}
  </h3>
  <h4 class="p-2 text-black transition duration-500 ease-in-out">
    What's included
  </h4>
  <div class="flex flex-col p-2 transition duration-500 ease-in-out py-10">
    {
      includes.map((include) => (
        <div class="flex items-center">
          <svg class="w-6 h-6 text-black rounded mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="4" d="M5 13l4 4L19 7" />
          </svg>
          <p class="text-sm text-black">{include}</p>
        </div>
      ))
    }
  </div>
  <BtnCard class="mx-4 mb-4">{action}</BtnCard>
</section>