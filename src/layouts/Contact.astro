---
import Btn from "../components/Btn.astro";
import Titulo from "../components/Titulo.astro";
---
<section
  class="p-16 flex flex-col justify-start items-center relative"
  id="Contact"
>
  <div class="bg-white rounded-lg p-4 flex flex-row justify-start items-center">
    <div class="w-1/2 h-full flex flex-col justify-start items-center">



      <div class="flex flex-col w-[80%] justify-start pb-4">
          <h2 class="text-2xl text-yellow-500 font-bold uppercase">Contact Us</h2>
          <h3 class="text-sm pb-4 text-black">
            We'd love to hear from you! Whether you have a question about our services, need assistance, or want to book an appointment, our team is ready to help
          </h3>
        </div>



      <form class="flex flex-col w-[80%] justify-center items-center pb-8">
        <div class="flex flex-col w-full justify-center gap-8">
          <input
            type="text"
            class="w-full p-4 mb-4 border border-gray-900 rounded-lg"
            placeholder="Name"
          />
          <input
            type="email"
            class="w-full p-4 mb-4 border border-gray-900 rounded-lg"
            placeholder="Email"
          />
          <input
            type="tel"
            class="w-full p-4 mb-4 border border-gray-900 rounded-lg"
            placeholder="Phone"
          />
          <select
            class="w-full p-4 mb-4 border border-gray-900 rounded-lg text-gray-500 bg-white"
          >
            <option value="">Select a Service</option>
            <option value="servicio1">Individuals</option>
            <option value="servicio2">Startups</option>
            <option value="servicio3">Big Companies</option>
          </select>
        </div>
        <Btn>Send Message</Btn>
      </form>
      
    </div>






    <div class="w-1/2 h-full">
      <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3618.010234141551!2d-69.27545638495876!3d10.074029299706083!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e875d00476b8717%3A0x61e919423a04e885!2sCasa%20Ale!5e0!3m2!1ses-419!2sve!4v1728008456586!5m2!1ses-419!2sve"
          width="100%"
          height="400px"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          class=""
          referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
  </div>
</section>